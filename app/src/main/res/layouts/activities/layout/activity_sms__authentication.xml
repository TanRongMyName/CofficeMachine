<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfe6cd"
    tools:context=".activitys.SMS_AuthenticationActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="短信认证"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        />
    <EditText
        android:id="@+id/edPhone"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:inputType="phone"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:hint="输入手机号码"
        />
    <LinearLayout
        android:id="@+id/line_code"
        android:layout_below="@id/edPhone"
        android:layout_marginTop="30dp"
        android:layout_width="300dp"
        android:orientation="horizontal"
        android:layout_alignLeft="@id/edPhone"
        android:layout_height="50dp">
        <EditText
            android:id="@+id/edcode"
            android:layout_width="140dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:background="#FFFFFF"
            android:textSize="15dp"
            android:hint="输入验证码"
            />
        <Button
            android:id="@+id/btCode"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textSize="15dp"
            android:background="#07e94a"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btJudy"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/line_code"
        android:textSize="20dp"
        android:text="确认"
        android:textColor="@color/white"
        android:background="#00adfc"
        />

</RelativeLayout>