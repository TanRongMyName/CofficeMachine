<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activitys.bottomMenuActivity.RadioGroupViewPageActivity"
        android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/main_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D7D7D7" />
    <RadioGroup
        android:id="@+id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/main_chunvzuo"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_drawer_navigation_four"
            android:gravity="center"
            android:checked="true"
            android:text="处女座"
            android:textColor="@drawable/textcolor" />

        <RadioButton
            android:id="@+id/main_mojiezuo"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_drawer_navigation_one"
            android:gravity="center"
            android:text="摩羯座"
            android:textColor="@drawable/textcolor" />

        <RadioButton
            android:id="@+id/main_shuangzizuo"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_drawer_navigation_three"
            android:gravity="center"
            android:text="双鱼座"
            android:textColor="@drawable/textcolor" />


        <RadioButton
            android:id="@+id/main_tianpingzuo"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bg_drawer_navigation_two"
            android:gravity="center"
            android:text="天秤座"
            android:textColor="@drawable/textcolor" />
    </RadioGroup>

    </LinearLayout>